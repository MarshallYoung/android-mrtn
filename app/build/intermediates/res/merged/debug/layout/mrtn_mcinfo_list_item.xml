<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="5dip"
    android:background="@drawable/mc_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_mc_id"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="商户编号："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_mc_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_mc_name"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="商户名称："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_mc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_order_type_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="        培训："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_001"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/tv_order_type_002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="        走访回访单："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_002"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_order_type_007"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="        报修："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_007"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/tv_order_type_003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="风险商户调查单："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_003"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_order_type_006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="配送耗材："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_006"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/tv_order_type_004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="        发卡行调单："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_004"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_order_type_005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="其他任务单："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_005"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/tv_order_type_008"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="装机任务单："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_008"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_order_type_009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="装机申请单："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_009"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/tv_order_type_010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="补充进件材料："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_order_type_010"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

</LinearLayout>