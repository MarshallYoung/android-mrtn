<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="5dip"
    android:background="@drawable/mc_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/txt_g_mcId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户编号："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_g_mcId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cl_login_tiyan"
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/txt_g_mcName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户名称："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_g_mcName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cl_login_tiyan"
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/txt_g_instName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机构名称："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_g_instName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cl_login_tiyan"
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/txt_g_addr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户地址："
            android:textSize="@dimen/dm_content_summary_txt" />

        <TextView
            android:id="@+id/txt_g_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cl_login_tiyan"
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

</LinearLayout>