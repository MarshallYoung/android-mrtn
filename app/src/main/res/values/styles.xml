<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Mydialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 按钮 -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_btn_blue</item>
    </style>

    <!-- 导航栏按钮 -->
    <style name="Button_Toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/selector_button_toolbar</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <!-- cell,LinearLayout专用 -->
    <style name="Cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cell_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/cell_padding</item>
        <item name="android:paddingRight">@dimen/cell_padding</item>
    </style>

    <style name="Cell.Top">
        <item name="android:background">@drawable/selector_cell_top</item>
    </style>

    <style name="Cell.Middle">
        <item name="android:background">@drawable/selector_cell_middle</item>
    </style>

    <style name="Cell.Bottom">
        <item name="android:background">@drawable/selector_cell_bottom</item>
    </style>

    <style name="Cell.Single">
        <item name="android:background">@drawable/selector_cell_single</item>
    </style>
    <!-- 图标 -->
    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_length</item>
        <item name="android:layout_height">@dimen/icon_length</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Icon.Left">
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <!-- 箭头 -->
    <style name="Icon_Arrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Icon_Arrow.Right_Gray">
        <item name="android:background">@drawable/icon_arrow_right</item>
    </style>

    <!-- 放在EditText前面的TextView -->
    <style name="TextView_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:lines">1</item>
    </style>
    <!-- 基本的EditText -->
    <style name="EditText_Body">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">#00000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
</resources>