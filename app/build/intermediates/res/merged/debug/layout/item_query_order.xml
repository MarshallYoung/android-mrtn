<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户编号"
            android:textSize="@dimen/input_text_size" />

        <EditText
            android:id="@+id/edt_merchant_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape_txt"
            android:textSize="@dimen/input_text_size"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分配日期"
            android:textSize="@dimen/input_text_size" />

        <EditText
            android:id="@+id/edt_order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            android:background="@drawable/shape_txt"
            android:enabled="false"
            android:textSize="@dimen/input_text_size" />

        <Button
            android:id="@+id/btn_check_date"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="#ff8c00"
            android:text="选择日期"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户名称"
            android:textSize="@dimen/input_text_size" />

        <EditText
            android:id="@+id/edt_merchant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape_txt"
            android:textSize="@dimen/input_text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_query"
        style="@style/Button.Blue"
        android:layout_marginTop="3dp"
        android:text="查询" />
</LinearLayout>