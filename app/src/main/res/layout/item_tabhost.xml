<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/fly_tab1"
        style="@style/tab_item">

        <TextView
            android:id="@+id/btn_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:background="@drawable/selector_tab_index"
            android:text="" />

        <TextView
            android:id="@+id/txt_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:text="主页"
            android:textColor="@color/selector_tab_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fly_tab2"
        style="@style/tab_item">

        <TextView
            android:id="@+id/btn_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:background="@drawable/selector_tab_message"
            android:text="" />

        <TextView
            android:id="@+id/txt_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:text="消息"
            android:textColor="@color/selector_tab_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fly_tab3"
        style="@style/tab_item">

        <TextView
            android:id="@+id/btn_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:background="@drawable/selector_tab_update"
            android:text="" />

        <TextView
            android:id="@+id/txt_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:text="更新"
            android:textColor="@color/selector_tab_text" />
    </LinearLayout>

</LinearLayout>