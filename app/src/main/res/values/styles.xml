<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Mydialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/mrtn_login_ck_style</item>
    </style>

    <style name="LayerList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LayoutListLeftTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="LayoutListRightTextView">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="order_detail">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="order_detail_right">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColor">@color/cl_login_tiyan_huise</item>
    </style>

    <style name="waybill_detail_right">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColor">@color/cl_login_tiyan_huise</item>
    </style>

    <style name="trade_detail">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <!-- 按钮 -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_btn_blue</item>
    </style>

    <!-- 导航栏按钮 -->
    <style name="Button_Toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/selector_button_toolbar</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <!-- cell,LinearLayout专用 -->
    <style name="Cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cell_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/cell_padding</item>
        <item name="android:paddingRight">@dimen/cell_padding</item>
    </style>

    <style name="Cell.Top">
        <item name="android:background">@drawable/selector_cell_top</item>
    </style>

    <style name="Cell.Middle">
        <item name="android:background">@drawable/selector_cell_middle</item>
    </style>

    <style name="Cell.Bottom">
        <item name="android:background">@drawable/selector_cell_bottom</item>
    </style>

    <style name="Cell.Single">
        <item name="android:background">@drawable/selector_cell_single</item>
    </style>

    <!-- 箭头 -->
    <style name="Icon_Arrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Icon_Arrow.Right_Gray">
        <item name="android:background">@drawable/icon_arrow_right</item>
    </style>

    <!-- 放在EditText前面的TextView -->
    <style name="TextView_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:lines">1</item>
    </style>
    <!-- 基本的EditText -->
    <style name="EditText_Body">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">#00000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
</resources>