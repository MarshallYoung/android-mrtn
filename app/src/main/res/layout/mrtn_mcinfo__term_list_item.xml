<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/gray_line"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_termId1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="终端号："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_termId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_termAddr1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="装机地址："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_termAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_servicesManName1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="维护人员："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_servicesManName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_salesManName1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="业务人员："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_salesManName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_hostSerialNo1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="序列号："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_hostSerialNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_termLinknm1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="联系人："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_termLinknm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_termLinktel1"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="联系电话："
            android:textSize="@dimen/textsize_input" />

        <TextView
            android:id="@+id/tv_column_termLinktel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dm_content_summary_txt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

</LinearLayout>